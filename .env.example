# ===========================================
# Authentication (NextAuth.js)
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# Google OAuth
# Get credentials at: https://console.developers.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook (Meta) OAuth
# Get credentials at: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ===========================================
# Email Marketing (Mailchimp)
# ===========================================
# Get API key at: https://mailchimp.com/help/about-api-keys/
MAILCHIMP_API_KEY=
MAILCHIMP_AUDIENCE_ID=
MAILCHIMP_SERVER_PREFIX=us1

# ===========================================
# AI Backend - DeepSeek
# ===========================================
# Get API key at: https://platform.deepseek.com/
DEEPSEEK_API_KEY=
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# ===========================================
# RAG Service (ADHD Research Papers)
# ===========================================
# Shared RAG API service (阿里云服务器)
# Server IP: 47.110.88.11, Port: 8000
# Contains 15,844 passages from ADHD research papers
RAG_API_BASE=http://47.110.88.11:8000

# Enable RAG function calling (true/false)
# When true: AI can call RAG tool to search research papers
# When false: AI uses general knowledge only
ENABLE_RAG=true

# Enable RAG Smart Summary - 双LLM架构 (true/false)
# When true: 使用第一个LLM提取论文核心发现，生成500-800字精炼摘要
# When false: 直接将完整论文内容传给对话LLM
# 参考: docs/PROMPT_SYSTEM_ARCHITECTURE.md 第8.4节
ENABLE_SMART_SUMMARY=true

# ===========================================
# Supabase (Database & Auth)
# ===========================================
# Get credentials at: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
